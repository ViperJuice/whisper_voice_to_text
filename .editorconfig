# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Python files
[*.py]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Batch files
[*.bat]
end_of_line = crlf

# Shell scripts
[*.sh]
end_of_line = lf 